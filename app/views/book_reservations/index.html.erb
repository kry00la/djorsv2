<%- model_class = BookReservation.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:reservation_id) %></th>
      <th><%= model_class.human_attribute_name(:ip_address) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:card_type) %></th>
      <th><%= model_class.human_attribute_name(:card_expires_on) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @book_reservations.each do |book_reservation| %>
      <tr>
        <td><%= link_to book_reservation.id, book_reservation_path(book_reservation) %></td>
        <td><%= book_reservation.reservation_id %></td>
        <td><%= book_reservation.ip_address %></td>
        <td><%= book_reservation.first_name %></td>
        <td><%= book_reservation.last_name %></td>
        <td><%= book_reservation.card_type %></td>
        <td><%= book_reservation.card_expires_on %></td>
        <td><%=l book_reservation.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_book_reservation_path(book_reservation), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      book_reservation_path(book_reservation),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_book_reservation_path,
            :class => 'btn btn-primary' %>
