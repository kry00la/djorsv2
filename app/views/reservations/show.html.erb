<div class="container">
	<div id="reservation_container">
<%- model_class = @reservation.class -%>

		
	
	<div class="row-fluid">
		
		<div class="span8">

				<div id="package-function">
				
					<%= display_package @reservation%>
						<hr />
					<%= display_function_room @reservation%>

			</div>	
		</div>

		<div class="span4">
			<div id="reservation_handler">
				<div class="right-wing">
		
					<p>
					  <strong>Total:</strong>
					  <%= @reservation.total_price %>
					</p>
					
					<p>
					  <strong>Name:</strong>
					  <%= @reservation.name %>
					</p>
					
					
					<p>
					  <strong>Booked Date:</strong>
					  <%= @reservation.date %>
					</p>
					<p>
					  <strong><%= model_class.human_attribute_name(:timeStart) %>:</strong> | <strong><%= model_class.human_attribute_name(:timeEnd) %>:</strong><br>
					  <%= @reservation.timeStart.strftime('%l:%M - %P')%> | 
					  <%= @reservation.timeEnd.strftime('%l:%M - %P')%>
					</p>
					<p>
					 
					</p>
					<p>
					<b>Total Hours you will render:</b><br>
						<%timex=Time.diff(Time.parse(@reservation.timeStart.to_s), Time.parse(@reservation.timeEnd.to_s), '%H %N')%>
						<%= timex[:diff]%>
					</p>
					<p>
					  <strong><%= model_class.human_attribute_name(:numGuest) %>:</strong><br>
					  <%= @reservation.numGuest %>
					</p>
					<p>
					  <strong><%= model_class.human_attribute_name(:service_id) %>:</strong><br>
					  <%= @reservation.service.name %>
					</p>
				</div>
				
		
		<div class="form-actions">
			<button class="btn btn-inverse" type="submit">
			  <%= link_to "PAY", new_book_reservation_path%>		
			</button>
		
		  <%= link_to t('.edit', :default => t("helpers.links.edit")),
		              edit_reservation_path(@reservation), :class => 'btn' %>
		  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
		              reservation_path(@reservation),
		              :method => 'delete',
		              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
		              :class => 'btn btn-danger' %>
		</div>
			</div>
		</div>			
			
	</div>		
			
			
			
	
</div>
	</div>	
</div>
