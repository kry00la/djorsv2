<%- model_class = @reservation.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
  <%= @reservation.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:address) %>:</strong><br>
  <%= @reservation.address %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:contact) %>:</strong><br>
  <%= @reservation.contact %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:date) %>:</strong><br>
  <%= @reservation.date %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:timeStart) %>:</strong><br>
  <%= @reservation.timeStart.strftime('%l:%M - %P')%>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:timeEnd) %>:</strong><br>
  <%= @reservation.timeEnd.strftime('%l:%M - %P')%>
</p>
<p>
<b>Total Hours you will render:</b>
	<%timex=Time.diff(Time.parse(@reservation.timeStart.to_s), Time.parse(@reservation.timeEnd.to_s), '%H %N')%>
	<%= timex[:diff]%>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:numGuest) %>:</strong><br>
  <%= @reservation.numGuest %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:service_id) %>:</strong><br>
  <%= @reservation.service.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:email) %>:</strong><br>
  <%= @reservation.email %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:total_price) %>:</strong><br>
  <%= @reservation.total_price %>
</p>

<%= display_package @reservation%>


<%= display_function_room @reservation%>

<div class="form-actions">
	<%= link_to "Check out reservation", new_book_reservation_path%>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_reservation_path(@reservation), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              reservation_path(@reservation),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
